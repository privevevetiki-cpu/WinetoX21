-- LocalScript в StarterGui

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "MoveGUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- === Окно ===
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 380, 0, 80)
mainFrame.Position = UDim2.new(0.5, -190, 0.5, -40)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.BorderSizePixel = 0
mainFrame.Parent = gui

-- === Текст ===
local txt = Instance.new("TextLabel")
txt.Size = UDim2.new(1, -20, 1, -20)
txt.Position = UDim2.new(0, 10, 0, 10)
txt.BackgroundTransparency = 1
txt.Font = Enum.Font.GothamBold
txt.TextWrapped = true
txt.TextScaled = true
txt.TextColor3 = Color3.fromRGB(255, 255, 255)
txt.Text = "нету скрипта т.к вы бездари которые не ценят этот скрипт он будет только у меня (у царя мира и всемогущего чата джипити и бездаря винеси)"
txt.Parent = mainFrame
